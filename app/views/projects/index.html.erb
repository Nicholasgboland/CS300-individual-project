<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Portfolio Projects</h1>
        <p class="lead text-muted">Portfolio Projects is a place where you can post your own projects. Allowing you to create a public portfolio.</p>
        <p>
          <%= link_to "New project", new_project_path, :class => "btn btn-primary my-2" %>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div id="projects">
        <% @projects.in_groups_of(3, false).each do |group| %>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% group.each do |project| %>
              <div class="col">
                <div class="card card-body shadow-sm">
                  <%= render project, :class => "card-body d-flex justify-content-between align-items-center" %>
                  <div class="btn-group">
                    <%= link_to "Show this project", project, :class => "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</main>
